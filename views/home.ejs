<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="https://w7.pngwing.com/pngs/853/941/png-transparent-orange-hotel-illustration-hotel-gratis-vecteur-hotel-angle-text-orange-thumbnail.png" alt="" width="150" height="150">
        <h1 class="display-5 fw-bold text-body-emphasis">Hotel Management Application</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">Web App for managing hotel rooms and booking them.</p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <form id="findHotelsForm" action="/find-hotels" method="GET">
                <div class="mb-3">
                    <label for="radius" class="form-label">Enter Radius (kilometers) of search from your current location</label>
                    <input type="text" class="form-control" id="radius" name="radius" placeholder="Enter radius in kilometers">
                </div>
                
               
                <div class="mb-3">
                    <label for="checkInDate" class="form-label">Check-in Date</label>
                    <input type="date" class="form-control" id="checkInDate" name="checkInDate">
                </div>
                
    
                <div class="mb-3">
                    <label for="checkOutDate" class="form-label">Check-out Date</label>
                    <input type="date" class="form-control" id="checkOutDate" name="checkOutDate">
                </div>

                <input type="hidden" id="latitude" name="latitude">
                <input type="hidden" id="longitude" name="longitude">
                <button type="button" class="btn btn-primary" id="findHotelsButton">Find Hotels</button>
            </form>
          </div>
          <form action="/see-reservations" method="GET" class="mt-3">
            <button type="submit" class="btn btn-secondary">See All Reservations</button>
         </form>
         
        </div>
      </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script>
    document.getElementById("findHotelsButton").addEventListener("click", function() {
        getLocation();
    });

    function getLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                console.log("Latitude:", position.coords.latitude);
                console.log("Longitude:", position.coords.longitude);
                showPosition(position);
                document.getElementById("findHotelsForm").submit();
            });
        } else {
            alert("Geolocation is not supported by this browser.");
        }
    }

    function showPosition(position) {
        var latitudeInput = document.getElementById("latitude");
        var longitudeInput = document.getElementById("longitude");
       
        latitudeInput.value = position.coords.latitude;
        longitudeInput.value = position.coords.longitude;
    }
</script>
</html>
